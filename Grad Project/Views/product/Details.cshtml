@model Grad_Project.Models.product

@{
    ViewData["Title"] = "Details";
}
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>@Model.name Details</h2>
          <ol>
            <li><a href="index.html">Home</a></li>
            <li>@Model.name Details</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

<section id="portfolio-details" class="portfolio-details">
      <div class="container">

        <div class="row gy-4">

          <div class="col-lg-8">
            <div class="portfolio-details-slider swiper">
              <div class="swiper-wrapper align-items-center">

                <div class="swiper-slide">
                  <img src="~/assets/img/nokia_5_3_1x.png" alt="">
                </div>

                <div class="swiper-slide">
                  <img src="~/assets/img/nokia_5_3_1x.png" alt="">
                </div>

                <div class="swiper-slide">
                  <img src="~/assets/img/nokia_5_3_1x.png" alt="">
                </div>

              </div>
              <div class="swiper-pagination"></div>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="portfolio-info">
              <h3>Product information</h3>
              <ul>
                <li><strong>Category</strong>: @Model.cat.name</li>
                <li><strong>Client</strong>: ASU Company</li>
                <li><strong>Project date</strong>: 01 March, 2020</li>
                <li><strong>Price</strong>: $@Model.price</li>
              </ul>
              <div class="portfolio-description">
              <h2>Product description</h2>
              <p>
                @Model.description
              </p>
            </div>
            <a class="btn btn-primary" asp-route-id="@Model.id" asp-controller="cart" asp-action="index">Add to Cart</a>
            </div>
            
          </div>
          
        </div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.id">Edit</a> |
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
      </div>
    </section><!-- End Portfolio Details Section -->

