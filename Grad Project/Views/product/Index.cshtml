@model IEnumerable<Grad_Project.Models.product>

@{
    ViewData["Title"] = "Index";
}




 <section id="services" class="services section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Product</h2>
          <p>providing best online services in town.</p>
          <br />
          <a asp-action="Create" class="btn btn-primary">Create New Product</a>
        </div>

        <div class="row gy-4">
            

            @foreach(var item in Model)
            {
                   <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                <div class="icon-box iconbox-blue">
                  <div class="icon">
                    <img width="200" height="200" viewBox="0 0 600 600" src="~/assets/img/nokia_5_3_1x.png">
                      
                  </div>
                  <br>
                  <h4><a href="">@item.name</a></h4>
                  <p>@item.description</p> 
                  <h4>$@item.price</h4> 
                  <br>
                  <a asp-route-id="@item?.id" asp-action="Details" class="btn btn-primary">Details</a>
                   <a asp-route-id="@item?.id" asp-action="Details" class="btn btn-primary">Add to Cart</a>
              </div>
                
              </div>
                 
            }
          

         

        </div>

      </div>
      </section>


